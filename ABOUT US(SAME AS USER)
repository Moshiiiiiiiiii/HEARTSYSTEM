        // Logout confirmation (redirect to login form if Yes)
        private void guna2Button5_Click(object sender, EventArgs e)
        {
            Guna2MessageDialog dialog = new Guna2MessageDialog();
            dialog.Caption = "WARNING";
            dialog.Text = "Are you sure you want to exit the application?";
            dialog.Style = MessageDialogStyle.Dark;
            dialog.Icon = MessageDialogIcon.Warning;
            dialog.Buttons = MessageDialogButtons.YesNo;
            dialog.Parent = this; // Centers dialog in form

            // Show dialog and check user response
            DialogResult result = dialog.Show();

            if (result == DialogResult.Yes)
            {
                // Go back to login form
                Form2 logout = new Form2();
                logout.Show();
                this.Close();
            }
        }

        // Exit application confirmation when label is clicked
        private void label7_Click(object sender, EventArgs e)
        {
            Guna2MessageDialog dialog = new Guna2MessageDialog();
            dialog.Caption = "WARNING";
            dialog.Text = "Are you sure you want to exit the application?";
            dialog.Style = MessageDialogStyle.Dark;
            dialog.Icon = MessageDialogIcon.Warning;
            dialog.Buttons = MessageDialogButtons.YesNo;
            dialog.Parent = this;

            DialogResult result = dialog.Show();

            // Exit app if confirmed
            if (result == DialogResult.Yes)
            {
                Application.Exit();
            }
        }

        // Minimize the entire app (all open forms)
        private void label8_Click(object sender, EventArgs e)
        {
            foreach (Form f in Application.OpenForms)
            {
                f.WindowState = FormWindowState.Minimized;
            }
        }

        // Go to Admin Form
        private void guna2Button3_Click(object sender, EventArgs e)
        {
            Form10 admin = new Form10();
            admin.Show();
            this.Close();
        }

        // Go to next form (Form4)
        private void guna2Button2_Click(object sender, EventArgs e)
